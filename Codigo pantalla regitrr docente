    private void btnRegistrarActionPerformed(java.awt.event.ActionEvent evt) {                                             
       
String apellidoP;
String apellidoM;
String FechaNacimiento;
String Direccion;
String nombres;
String Telefono;
String Celular;
String TDocumento;
String DNI;
String Correo;
String contrasena;
String concontrasena;


    apellidoP = txtApellidoP.getText();
    apellidoM = txtApellidoM.getText();
    FechaNacimiento = txtFechaNacimiento.getText();
    Direccion = txtDireccion.getText();
    nombres = txtNombres.getText();
    Telefono = txtTelefono.getText();
    Celular = txtCelular.getText();
    TDocumento = (String) jComboBox1.getSelectedItem();
    DNI = txtDNI.getText();
    Correo = txtCorreo.getText();
    contrasena = txtContrasena.getText();
    concontrasena = txtContrasena1.getText();
   if (apellidoP.isEmpty() || apellidoM.isEmpty() || FechaNacimiento.isEmpty() || Direccion.isEmpty() ||
        nombres.isEmpty() || Telefono.isEmpty() || Celular.isEmpty() || TDocumento == null || DNI.isEmpty() ||
        Correo.isEmpty() || contrasena.isEmpty() || concontrasena.isEmpty()) {
        JOptionPane.showMessageDialog(null, "Por favor, complete todos los campos", "Campos incompletos", JOptionPane.WARNING_MESSAGE);
        }
        else{if (!contrasena.equals(concontrasena)) {
        JOptionPane.showMessageDialog(null, "Las contraseñas no coinciden", "Error de contraseña", JOptionPane.WARNING_MESSAGE);
           } 
        else {
            JOptionPane.showMessageDialog(null, "Se registró usuario");
            }
            }
        
    }                                            

